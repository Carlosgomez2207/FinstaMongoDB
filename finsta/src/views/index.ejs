<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Finsta</title>
    <%- include("partials/head") %>
</head>
<body>
	<%- include("partials/navigation") %>
    <div class="container p-4">
        <div class="row">
            <div class="card-group">
							<div class="col-md-4 offset-md-4">
                <% images.forEach(function(image){ %>
                    <div class="card animated fadeInDown mt-3" style="margin-left: 1em;">
											<img src="<%= image.path+image.originalname %>" class="card-img-top"
											>
                        <div class="card-body">
													<h5 class="card-title"><%= image.title %></h5>
													<p class="card-text"><%= image.description %></p>
													<p class="card-text"><%= format(image.created_at) %></p>
													<a href="/image/<%= image._id %>" class="btn btn-primary">
														View Profile
													</a>
												</div>
                    </div>
                <% }) %>
            </div>
					</div>
        </div>
    </div>
</body>
</html>